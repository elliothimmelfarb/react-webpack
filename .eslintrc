{
    "extends": "airbnb",
    "globals": {
        "angular": true,
        "before": true,
        "describe": true,
        "it": true,
        "beforeEach": true,
        "after": true
  },
    "rules": {
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "no-underscore-dangle": ["error", { "allow": ["_properties", _id", "_tenants", "_onChange", "_getComponentState"] }],
        "no-shadow": ["error", { "allow": ["done", "dbUser", "cb", "err", "response", "res"] }]
    }
}
